{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "env": {
    "browser": false,
    "commonjs": false,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "semi": "off",
    "max-len": ["warn", 160],
    "arrow-parens": "off",
    "quote-props": ["error", "as-needed"]
  }
}